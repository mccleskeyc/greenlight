<h1   > Add Script Coverage </h1>
<form action="/scripts" method="post">
  <div class="input-field">
    <input id="title" name="scripts[title]" type="text" class="validate" autocomplete="off">
    <label for="title">Title</label>
  </div>

  <div class="input-field">
    <input id="writer" name="scripts[writer]" type="text" class="validate" autocomplete="off">
    <label for="writer">Writer(s)</label>
  </div>

  <div class="input-field">
    <input type="text" class="datepicker" name="scripts[date]" id="date" autocomplete="off">
    <label for="date">Date Read</label>
  </div>

  <div class="input-field">
    <input id="rec" name="scripts[rec]" type="text" class="validate" autocomplete="off">
    <label for="rec">Recommendation</label>
  </div>

  <div class="input-field">
    <textarea id="notes" rows = "5" cols = "60" name = "scripts[notes]"></textarea>
    <label for="notes">Notes</label>
  </div>

  <input type="submit" value="Save Coverage" class="btn green darken-4">
</form>

<script>
$(document).ready(function(){
    $('.datepicker').datepicker();
  });
</script>
